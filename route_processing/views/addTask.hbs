<div class="text-center">
    <h2> Создание Задачи </h2>
</div>
<div>
    <form action="/addTask/0" method="post" >
         <div>
             <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea" name="name" id="validationDefault01" required></textarea>
                <label for="floatingTextarea" >Название задачи</label>
             </div>
        </div>
         <div class="mb-3">
               <label for="floatingTextarea" >Описание задачи</label>
                <textarea class="form-control" placeholder="Leave a description of the task here" id="floatingTextarea" name="description" id="validationDefault01" required rows="5"></textarea>
             </div>
         <div class="d-grid gap-2 col-2 mx-auto">
            <input type="hidden" name="_method" value="POST">
            <button type="submit"  class="btn btn-outline-dark justify-content-between">Создать Задачу</button>
         </div>
    </form>

</div>